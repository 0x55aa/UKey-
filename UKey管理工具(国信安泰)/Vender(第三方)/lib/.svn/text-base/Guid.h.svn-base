#pragma once

#include "rpc.h"
#include "rpcdce.h"
#include "CheckPointer.h"
#include "stdio.h"

#pragma comment (lib, "Rpcrt4.lib")

class CGuid
{

public:
	CGuid(void);
	virtual ~CGuid(void);
public:

	static bool GetGuidStr(char *sBuf)
	{	
		GUID guid;
		if(S_OK != CoCreateGuid(&guid))//4+2+2+8 = 16个字节
			return false;
		else
			UuidToString((UUID*)&guid, (unsigned char**)&sBuf);
		return true;
	}

	static bool GetGuidNumStr(char *sBuf)
	{	
		GUID guid;
		if(S_OK != CoCreateGuid(&guid))//4+2+2+8 = 16个字节
			return false;
		else
		{
			if(!CCheckPointer::CheckPointer((void*)sBuf, 32))
				return false;

			sprintf(sBuf, "%08x%04x%04x"
				"%02x%02x%02x%02x"
				"%02x%02x%02x%02x", 
				guid.Data1,guid.Data2,guid.Data3,
				guid.Data4[0],guid.Data4[1],
				guid.Data4[2],guid.Data4[3],
				guid.Data4[4],guid.Data4[5],
				guid.Data4[6],guid.Data4[7]);
		}
		return true;
	}

};
